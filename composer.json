{
    "name": "codeispoetry/wp-scaffold",
    "description": "scaffold for developing a WordPress plugin",
    "type":"wordpress-plugin",
    "extra": {
        "installer-paths": {
          "wordpress/wp-content/plugins/{$name}/": [
            "type:wordpress-plugin"
          ],
          "wordpress/wp-content/themes/{$name}/": [
            "type:wordpress-theme"
          ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "vendor-dir":"src/vendor"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.7.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/phpcompatibility-wp": "*",
        "wp-coding-standards/wpcs": "^2.3",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "scripts":{
       "create-archive":[
            "zip -x \"*.git*\" -x \"*.scss\" -x \"bin/*\" -x \"*.xml\" -x \"**/composer.*\" -x \"*.yml\" -x \"*Test*\" -x \"**/tests/*\" -x \"gulpfile.js\" -x \"scss/*\""
        ],
        "install-plugin":[
            "wp plugin install --path=wordpress"
        ],
        "activate-plugin":[
            "wp plugin activate --path=wordpress"
        ],
        "install-wp-test":[
            "wp scaffold plugin-tests {$name} --path=wordpress --dir=./",
            "bin/install-wp-tests.sh wordpress_test root $MYSQL_USER_PASSWORD $MYSQL_HOST latest"
        ],
        "scaffold-wp-plugin": [
            "wp scaffold plugin {$name} --path=wordpress --prompt"
        ],
        "scaffold-hlashbrooke-plugin":[
            "bash bin/scaffold-hlashbrooke-plugin.sh"
        ]
        "tests": [
            "phpunit"
        ]
    }
}
